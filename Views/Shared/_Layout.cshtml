    <link rel="stylesheet" href="~/css/animate.min.css">
    <!--Chartist CSS-->
    <link rel="stylesheet" href="~/css/chartist.min.css">
    <!--Map-->
    <link rel="stylesheet" href="~/css/jquery-jvectormap-2.0.2.css">
    <!--Bootstrap Calendar-->
    <link rel="stylesheet" href="~/js/calendar/bootstrap_calendar.css">
    <!--Nice select -->
    <link rel="stylesheet" href="~/css/nice-select.css">
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/paper-bootstrap-wizard.css">
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/registro.css" rel="stylesheet" />
</head>

<body>
    <!--Page loader-->
    <div class="loader-wrapper">
        <div class="loader-circle">
            <div class="loader-wave"></div>
        </div>
    </div>
    <!--Page loader-->
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="container-fluid">
            <partial new name="_Header" />
            <div class="row main-content">
                <partial new name="_Menu" />
                <div class="col-sm-10 col-xs-12 content pt-3 pl-0">
                    @RenderBody()
                    <partial new name="_Footer" />
                </div>
            </div>
        </div>
    }
    @RenderBody()


    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <!--Page Wrapper-->
    <!-- Page JavaScript Files-->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery-1.12.4.min.js"></script>
    <!--Popper JS-->
    <script src="~/js/popper.min.js"></script>
    <!--Bootstrap-->
    <script src="~/js/bootstrap.min.js"></script>
    <!--Sweet alert JS-->
    <script src="~/js/sweetalert.js"></script>
    <!--Alertify JS-->
    <script src="~/js/alertify.min.js"></script>
    <!--Progressbar JS-->
    <script src="~/js/progressbar.min.js"></script>
    <!--Flot.JS-->
    <script src="~/js/charts/jquery.flot.min.js"></script>
    <script src="~/js/charts/jquery.flot.pie.min.js"></script>
    <script src="~/js/charts/jquery.flot.categories.min.js"></script>
    <script src="~/js/charts/jquery.flot.stack.min.js"></script>
