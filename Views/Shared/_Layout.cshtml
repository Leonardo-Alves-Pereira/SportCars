    </environment>
    <environment exclude="Development">
    </environment>

    <!--Custom Js Script-->
    <script src="~/js/custom.js"></script>
    <!--Custom Js Script-->
    <script>
        //Nice select
        $('.bulk-actions').niceSelect();
    </script>
</body>
</html>